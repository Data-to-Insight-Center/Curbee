<sead-config>
    <!--workflow level parameters-->
    <parameter name="useMessaging">false</parameter>

    <!--list of activities to be executed in SEAD workflow-->
    <activities>
        <!--activity to convert/traslate RO -->
        <activity name="convert_ro" class="org.sead.workflow.activity.impl.ConvertROActivity">
            <parameter name="tempPath">U:\temp</parameter>
        </activity>
        <!--activity to persist RO in RO subsystem -->
        <activity name="persist_ro" class="org.sead.workflow.activity.impl.PersistROActivity">
            <parameter name="roSystemUrl">http://localhost:8180/ro</parameter>
        </activity>
        <!--activity to validate the RO-->
        <activity name="validate_ro" class="org.sead.workflow.activity.impl.ValidateROActivity">
        </activity>
        <!--activity to update RO status in registry-->
        <activity name="update_ro_status" class="org.sead.workflow.activity.impl.UpdateROStatusActivity">
            <parameter name="roSystemUrl">http://localhost:8180/ro</parameter>
        </activity>
        <!--activity to harvest to PDT-->
        <activity name="harvest_pdt" class="org.sead.workflow.activity.impl.UpdatePdtActivity">
            <parameter name="pdtSystemUrl">http://localhost:8180/sead-pdt</parameter>
        </activity>
        <!--activity to call Matchmaker to publish the PO-->
	<activity name="publish_ro" class="org.sead.workflow.activity.impl.PublishROActivity">
    <parameter name="messaging.username">matchmaker</parameter>
    <parameter name="messaging.password">sead-matchmaker</parameter>
    <parameter name="messaging.hostname">seadva-test.d2i.indiana.edu</parameter>
    <parameter name="messaging.hostport">5672</parameter>
    <parameter name="messaging.virtualhost">/</parameter>
    <parameter name="messaging.exchangename">MatchmakerExchange_Request</parameter>
    <parameter name="messaging.queuename">MatchmakerQueue_Request</parameter>
    <parameter name="messaging.routingkey">MatchmakerKey_Request</parameter>
</activity>
    </activities>

</sead-config>
