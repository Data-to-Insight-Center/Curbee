<sead-config>
    <!--workflow level parameters-->
    <parameter name="useMessaging">false</parameter>

    <!--list of activities to be executed in SEAD workflow-->
    <activities>
        <!--activity to convert/traslate RO -->
        <activity name="convert_ro" class="org.sead.workflow.activity.impl.ConvertROActivity">
            <parameter name="tempPath">path_to_temp_folder</parameter>
        </activity>
        <!--activity to persist RO in RO subsystem -->
        <activity name="persist_ro" class="org.sead.workflow.activity.impl.PersistROActivity">
            <parameter name="roSystemUrl">http://localhost:8080/ro</parameter>
        </activity>
        <!--activity to validate the RO-->
        <activity name="validate_ro" class="org.sead.workflow.activity.impl.ValidateROActivity">
        </activity>
        <!--activity to update RO status in registry-->
        <activity name="update_ro_status" class="org.sead.workflow.activity.impl.UpdateROStatusActivity">
            <parameter name="roSystemUrl">http://localhost:8080/ro</parameter>
        </activity>
        <!--activity to signal PS-->
        <activity name="signal_ps" class="org.sead.workflow.activity.impl.SignalPSActivity">
        </activity>
        <!--activity to call Matchmaker to publish the PO-->
        <activity name="publish_ro" class="org.sead.workflow.activity.impl.PublishROActivity">
            <parameter name="metadataServiceUrl">http://localhost:8080/mm</parameter>
        </activity>
    </activities>

